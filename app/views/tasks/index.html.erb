<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <ol><input type="checkbox"><%= link_to task.title, task_path(task) %></ol>
    <%= link_to 'Delete Task',
        task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>

<br>

<%= link_to 'Create New Task',  new_task_path %>
